<div class="categories-main">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 col-xs-12 categories-heading">
         <h3>{{ section.settings.title }}</h3>
            <p>{{ section.settings.textarea1 }}</p>
        </div>
      </div>
     </div>  
  <div class="row">  
{%- for block in section.blocks limit:4 %}
{% if block.type == "collection" %}  
  <div class="col-sm-3 col-xs-12 category-sub">
    <a class="img-link" href="{{ block.settings.button_link }}"> 
      <img src=" {{ block.settings.imgs2 | img_url: '2014x2014' }}" />
      <div class="category-sub-content">
        <h2>{{ block.settings.title2 }}</h2><p>{{ block.settings.title | escape }}</p>
      </div>
    </a> 
  </div>
{% endif %}    
{%- endfor -%}

<div class="blocks_cate_main">
{%- for block in section.blocks %}
{% if block.type == "collection_block" %}
<div class="collection_block">
    <a class="img-link" href="{{ block.settings.button_link }}"> 
      <img src=" {{ block.settings.imgs2 | img_url: '200X' }}" />
    </a> 
</div>  
{% endif %}  
{%- endfor -%}
</div> 

{%- for block in section.blocks %}
{% if forloop.index > 4 %}  
{% if block.type == "collection" %}  
  <div class="col-sm-3 col-xs-12 category-sub">
    <a class="img-link" href="{{ block.settings.button_link }}"> 
      <img src=" {{ block.settings.imgs2 | img_url: '2014x2014' }}" />
      <div class="category-sub-content">
        <h2>{{ block.settings.title2 }}</h2><p>{{ block.settings.title | escape }}</p>
      </div>
    </a> 
  </div>
{% endif %}    
{% endif %}      
{%- endfor -%}

    
    </div>   
</div>

