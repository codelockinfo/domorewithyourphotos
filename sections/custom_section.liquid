<section class="product-banner-main" style='background-image:url({{ section.settings.imgs | img_url: '1024x1024' }})'>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-xs-12 proct-banner-content"><h3>{{ section.settings.title }}</h3>
        <p>{{ section.settings.textarea}}</p>
        <a class="Contact-us" href=" {{ section.settings.button_link }}">{{ section.settings.title1 }}</a>
          
        </div>
      </div>
        </div>
</section>
{% schema %} 
{
  "name": "contact Section",
  "class": "contact-section",
  "settings": [
   {
          "type": "image_picker",
          "id": "imgs",
          "label": "Image"
        },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"     
    },
  {
      "type": "textarea",
      "id": "textarea",
      "label": "Description",
      "default": "collection section"   
    },
 {
      "type": "text",
      "id": "title1",
      "label": "Button Text"     
    },
 
  {
      "type": "url",
      "id": "button_link",
      "label": "Button link"  
    }
  ],
  "presets": [
    {
      "name": "Contact Section",
      "category": "Image"
    }
  ]
}
{% endschema %}
