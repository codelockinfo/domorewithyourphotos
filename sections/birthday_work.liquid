<div class="how_it_work">
    <div class="container">
    {% assign title = section.settings.title %}{% assign sub_title = section.settings.sub_title %}  
      <div class="heading_section">
        {% if title != blank %}<h2>{{ title }}</h2>{% endif %} 
        {% if sub_title != blank %}<p>{{ sub_title }}</p>{% endif %}  
      </div>
    <div class="blocks">  
    {% for block in section.blocks %}
    <div class="block">
    {% assign image = block.settings.image %}
    {% assign heading = block.settings.heading %}{% assign html = block.settings.html %} 
    {% if image != blank %}<img src="{{ image | img_url: 'master'  }}"  />{% endif %}
    {% if heading != blank %}<h4>{{ heading }}</h4>{% endif %}  
    {% if html != blank %}<div class="desc">{{ html }}</div>{% endif %}
    </div>
    {% endfor %}  
    </div> 
    </div>  
    </div>
    
    {% schema %}
      {
        "name": "About work section",
        "settings": [
              {
                "type": "text",
                "id": "title",
                "label": "Title"
              },
              {
                "type": "text",
                "id": "sub_title",
                "label": "Sub Title"
              }      
        ],
        "blocks": [
          {
            "type": "block",
            "name": "Block",
            "settings": [
              {
                "type": "image_picker",
                 "id": "image",
                "label": "Image"
              },
              {
                "type": "text",
                "id": "heading",
                "label": "Heading"
              },
              {
                "type": "html",
                "id": "html",
                "label": "Content"
              }
            ]
          }
        ],
        "presets": [
          {
            "name": "About work section",
            "category": "Content",
            "settings": {
            },
            "blocks": [
            ]
          }
        ]
      }
    {% endschema %}
    